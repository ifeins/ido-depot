<div class="depot_form">
  <% if alert %>
      <p id="notice"><%= alert %></p>
  <% end %>

  <%= form_tag do %>
      <fieldset>
        <legend>Please Log In</legend>
        <div>
          <%= label_tag :name, 'Name:' %>
          <!--<%= text_field_tag :name, params[:name] %>-->
          <%= text_field_tag :name %>
        </div>

        <div>
          <%= label_tag :password, 'Password:' %>
          <!--<%= password_field_tag :password, params[:password] %>-->
          <%= password_field_tag :password %>
        </div>

        <div>
          <%= submit_tag 'Login' %>
        </div>
      </fieldset>
  <% end %>
</div>